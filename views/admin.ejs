<%- include('layout', { title: 'Admin', user: user, cartCount: cartCount, body: '' }) %>

<section class="admin">
  <h1>Admin Panel</h1>
  <h3>Products</h3>
  <table class="admin-table">
    <thead><tr><th>ID</th><th>Title</th><th>Price</th></tr></thead>
    <tbody>
      <% products.forEach(p => { %>
        <tr><td><%= p.id %></td><td><%= p.title %></td><td>â‚¹<%= p.price %></td></tr>
      <% }) %>
    </tbody>
  </table>

  <h3>Add Product (quick JSON images)</h3>
  <form method="post" action="/admin/add-product">
    <label>Title</label><input name="title" required>
    <label>Price</label><input name="price" required>
    <label>Description</label><textarea name="desc"></textarea>
    <label>Images JSON</label>
    <textarea name="imagesJson" placeholder='{"Black":["/images/x.jpg","/images/y.jpg"]}' required></textarea>
    <button class="btn">Add Product</button>
  </form>
</section>
