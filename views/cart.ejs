<%- include('layout', { title: 'Cart', user: user, cartCount: cartCount, body: '' }) %>

<section class="cart-page">
  <h1>Your Cart</h1>
  <% if (!cart || cart.length===0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <% cart.forEach(item => { %>
      <div class="cart-card">
        <img src="<%= item.image %>" alt="<%= item.title %>">
        <div>
          <h3><%= item.title %></h3>
          <p>Color: <%= item.color %></p>
          <p>Qty: <%= item.qty %></p>
          <p>Price: â‚¹<%= item.price %></p>
        </div>
      </div>
    <% }) %>
  <% } %>
</section>
