<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "Ecom Demo" %></title>
  <link rel="stylesheet" href="/public/style.css" />
</head>

<body>

  <!-- NAV -->
  <header class="nav">
    <div class="nav-inner">

      <a href="/" class="logo">EcomDemo</a>

      <form action="/" method="get" class="search-form">
        <input name="q" placeholder="Search..." />
        <button>Search</button>
      </form>

      <nav class="nav-links">
        <a href="/">Shop</a>
        <a href="/wishlist">Wishlist (<%= wishlist?.length || 0 %>)</a>
        <a href="/cart">Cart (<%= cartCount || 0 %>)</a>

        <% if (!user) { %>
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        <% } else { %>
          <span class="muted">Hi, <%= user.name %></span>
          <% if (user.isAdmin) { %>
            <a href="/admin">Admin</a>
          <% } %>
          <a href="/logout">Logout</a>
        <% } %>
      </nav>

    </div>
  </header>

  <!-- CONTENT -->
  <main class="container">
    <%- body || "" %>
    <%- typeof content !== "undefined" ? content : "" %>
    <!-- Your pages will be rendered BELOW layout include -->
  </main>

  <!-- FOOTER -->
  <footer class="footer">
    Â© <%= new Date().getFullYear() %> Ecom Demo
  </footer>

  <script src="/public/js/main.js"></script>
</body>
</html>
