<%- include('layout', { title: 'Wishlist', user: user, cartCount: cartCount, body: '' }) %>

<section class="wishlist">
  <h1>Wishlist</h1>
  <% if (!items || items.length===0) { %>
    <p>No items in wishlist.</p>
  <% } else { %>
    <div class="cards">
      <% items.forEach(p => { %>
        <div class="card">
          <img src="<%= p.images[Object.keys(p.images)[0]][0] %>">
          <h3><%= p.title %></h3>
          <div class="price">â‚¹<%= p.price %></div>
          <a class="btn" href="/product/<%= p.id %>">View</a>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
