<%- include('layout', {
    title: "Wishlist",
    user: user,
    cart: cart,
    wishlist: wishlist,
    cartCount: cartCount,
    body: `
      <section>
        <h1>Your Wishlist</h1>
        ${(list && list.length > 0) ? `
          <div class="grid">
            ${list.map(p => `
              <div class="card">
                <div class="card-img"><img src="${Object.values(p.images)[0][0]}" /></div>
                <h3>${p.title}</h3>
                <p class="price">â‚¹${p.price}</p>
                <div class="card-row">
                  <a class="btn" href="/product/${p.id}">View</a>
                  <form method="post" action="/wishlist/toggle" style="display:inline;">
                    <input type="hidden" name="productId" value="${p.id}" />
                    <button class="btn secondary">Remove</button>
                  </form>
                </div>
              </div>
            `).join('')}
          </div>
        ` : '<p>Your wishlist is empty.</p>'}
      </section>
    `
  }) %>
  